<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avister">
    <uses-permission android:name=""
    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".player.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".player.ChooseSongActivity" />
        <activity android:name=".player.FileBrowserActivity" />
        <activity android:name=".player.AllSongsActivity" />
        <activity android:name=".player.RecentSongsActivity" />
        <activity
            android:name=".player.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.SETTINGS" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".player.HelpActivity" />
        <activity
            android:name=".player.SheetMusicActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"
            android:theme="@style/PlayerTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.mid"
                    android:scheme="file" />
            </intent-filter>
        </activity>
    </application>
</manifest>
